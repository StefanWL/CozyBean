@page
@model CozyBean.Pages.ContactModel
@{
    ViewData["Title"] = "Contact";
}
<div class="container-fluid p-0">
    <div class="row">
        <div class="col-12 col-sm-6 padded-text">
            <h1>Contact Us</h1>
            <p>contact@cozybean.com</p>
            <p><a href="tel:+1416-123-4567" class="phone">416-123-4567</a></p>
            <p>655 QUEEN ST W</p>
            <p>Please use the form below to send us a message and we will reply within one business day. You can also drop us an email anytime or feel free to give us a call. We'd love to hear from you!</p>
            <ul class="socialmedia">
                <li><a href="#"><img src="~/Content/facebookiconyellow.png" class="social-icon" /></a></li>
                <li><a href="#"><img src="~/Content/instagramiconyellow.png" class="social-icon" /></a></li>
                <li><a href="#"><img src="~/Content/twittericonyellow.png" class="social-icon" /></a></li>
                <li><a href="#"><img src="~/Content/tiktokiconyellow.png" class="social-icon" /></a></li>
            </ul>
        </div>
        <div class="col-12 col-sm-6 p-0">
            <img src="~/Content/comedians.png" class="image-fit" />
        </div>
    </div>
    <div class="row p-0 mt-5 off-white">
        <div class="col-8 padded-text">
            <form action="#" method="POST">
                <div class="ml-5">
                    <label for="fname">First Name:</label>
                    <input type="text" id="fname" name="fname">
                    <label for="lname">Last Name:</label>
                    <input type="text" id="lname" name="fname">
                </div>
                <div class="ml-5">
                    <label for="comment">Comment:</label><br>
                    <textarea name="comment" rows="8" cols="60"></textarea>
                </div>
            </form>
        </div>
        <div class="col-2">
            <p style="padding-top: 70%">Send us a message and we will reply within one business day. You can also drop us an email anytime or feel free to give us a call. We'd love to hear from you! </p>
        </div>
    </div>
    <div class="row off-white">
        <input class="btn-light mb-5" id="contact-submit" type="submit" value="Submit">
    </div>
</div>