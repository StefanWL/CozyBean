                <img src="~/Content/food.png" class="image-fit image-back" />
            </a>
            <a asp-page="Menu" asp-route-menu="Food" asp-route-category="Popular">
                <img src="~/Content/cartoonfood.png" class="image-fit image-front" />
            </a>
            <h2 class="panel-label">Popular Foods</h2>
        </div>
        <div class="col-12 col-lg-4 p-0 reveal-panel">
            <img src="~/Content/panel-arrow.png" class="panel-arrow" />
            <a asp-page="Menu" asp-route-menu="Meals" asp-route-category="Popular">
                <img src="~/Content/meals.png" class="image-fit image-back" />
            </a>
            <a asp-page="Menu" asp-route-menu="Meals" asp-route-category="Popular">
