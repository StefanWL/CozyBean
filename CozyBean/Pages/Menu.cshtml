                        <li><a class="menu-button active-menu-button" asp-page="Menu" asp-route-menu="Food" asp-route-category="Pastries">Pastries</a></li>
                    }
                    else
                    {
                        <li><a class="menu-button" asp-page="Menu" asp-route-menu="Food" asp-route-category="Pastries">Pastries</a></li>
                    }
                    @if (Model.categoryString == "Cakes")
                    {
                        <li><a class="menu-button active-menu-button" asp-page="Menu" asp-route-menu="Food" asp-route-category="Cakes">Cakes</a></li>
                    }
                    else
                    {
                        <li><a class="menu-button" asp-page="Menu" asp-route-menu="Food" asp-route-category="Cakes">Cakes</a></li>
                    }
                    @if (Model.categoryString == "Pies")
                    {
                        <li><a class="menu-button active-menu-button" asp-page="Menu" asp-route-menu="Food" asp-route-category="Pies">Pies</a></li>
