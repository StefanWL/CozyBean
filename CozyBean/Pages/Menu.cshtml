@page "/Menu/{menu}/{category}"
@model CozyBean.Pages.MenuModel
@{
    ViewData["Title"] = "Menu";
}
<div class="row">
    <div class="col-4"></div>
    <div class="col-4 food-menu mb-5">
        <div class="container">
            <div class="row">
                <div class="col-4 text-center"><a asp-page="Menu" asp-route-menu="Drinks" asp-route-category="Popular" class="button menu-option">Drinks</a></div>
                <div class="col-4 text-center"><a asp-page="Menu" asp-route-menu="Food" asp-route-category="Popular" class="button menu-option">Food</a></div>
                <div class="col-4 text-center"><a asp-page="Menu" asp-route-menu="Meals" asp-route-category="Popular" class="button menu-option">Meals</a></div>
            </div>
        </div>
    </div>
    <div class="col-4"></div>
</div>
<select name="drink-menu-dropdown" id="drink-menu-dropdown">
    <option value="popular-container">Popular</option>
    <option value="hot-coffee-container">Hot Coffee</option>
    <option value="hot-tea-container">Hot Tea</option>
    <option value="hot-drinks-container">Other Hot Drinks</option>
    <option value="cold-coffee-container">Cold Coffee</option>
    <option value="cold-tea-container">Cold Tea</option>
    <option value="cold-drinks-container">Other Cold Drinks</option>
</select>
<div class="row">
    <div class="col-3">
        <div id="menu-contents">
            @if (Model.menuString == "drinks")
            {
                <h2>Drink Types</h2>
                <ul>
                    @if (Model.categoryString == "Popular")
                    {
                        <li><a class="menu-button active-menu-button" asp-page="Menu" asp-route-menu="Drinks" asp-route-category="Popular">Popular</a></li>
                    }
                    else
                    {
                        <li><a class="menu-button" asp-page="Menu" asp-route-menu="Drinks" asp-route-category="Popular">Popular</a></li>
                    }
                    @if (Model.categoryString == "Hot Coffee")
                    {
                        <li><a class="menu-button active-menu-button" asp-page="Menu" asp-route-menu="Drinks" asp-route-category="Hot_Coffee">Hot Coffe</a></li>
                    }
                    else
                    {
                        <li><a class="menu-button" asp-page="Menu" asp-route-menu="Drinks" asp-route-category="Hot_Coffee">Hot Coffee</a></li>
                    }
                    @if (Model.categoryString == "Hot Tea")
                    {
                        <li><a class="menu-button active-menu-button" asp-page="Menu" asp-route-menu="Drinks" asp-route-category="Hot_Tea">Hot Tea</a></li>
                    }
                    else
                    {
                        <li><a class="menu-button" asp-page="Menu" asp-route-menu="Drinks" asp-route-category="Hot_Tea">Hot Tea</a></li>
                    }
                    @if (Model.categoryString == "Hot Drinks")
                    {
                        <li><a class="menu-button active-menu-button" asp-page="Menu" asp-route-menu="Drinks" asp-route-category="Hot_Drinks">Other Hot Drinks</a></li>
                    }
                    else
                    {
                        <li><a class="menu-button" asp-page="Menu" asp-route-menu="Drinks" asp-route-category="Hot_Drinks">Other Hot Drinks</a></li>
                    }
                    @if (Model.categoryString == "Cold Coffee")
                    {
                        <li><a class="menu-button active-menu-button" asp-page="Menu" asp-route-menu="Drinks" asp-route-category="Cold_Coffee">Cold Coffee</a></li>
                    }
                    else
                    {
                        <li><a class="menu-button" asp-page="Menu" asp-route-menu="Drinks" asp-route-category="Cold_Coffee">Cold Coffee</a></li>
                    }
                    @if (Model.categoryString == "Cold Tea")
                    {
                        <li><a class="menu-button active-menu-button" asp-page="Menu" asp-route-menu="Drinks" asp-route-category="Cold_Tea">Cold Tea</a></li>
                    }
                    else
                    {
                        <li><a class="menu-button" asp-page="Menu" asp-route-menu="Drinks" asp-route-category="Cold_Tea">Cold Tea</a></li>
