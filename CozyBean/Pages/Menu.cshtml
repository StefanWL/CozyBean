                    }
                </ul>
            }
        </div>
    </div>
    <div class="col-9">
        <div class="row">
            <h2>@Model.categoryString</h2>
        </div>
        <div class="row">
            @foreach (var item in Model.menuItems)
            {
            <div class="col-3 card">
                <a asp-page="Order" asp-route-id=@item.ID>
                    <div class="card-img-top">
                        <img src=@item.ImageURL class="menu-item-image" />
                    </div>
                    <div class="card-text-bottom">
                        <h4>@item.Name</h4>
                        <p>@item.Description - $@item.Price</p>
                    </div>
                </a>
            </div>
            }
        </div>
    </div>
</div>
<div id="order-popout">
    <div class="row">
        <button href="#" class="w-100 p-3 dark-button" id="cart-button">Place Order</button>
    </div>
    <div class="row" id="order">

    </div>
</div> 