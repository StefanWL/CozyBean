                    }
                    else
                    {
                        <li><a class="menu-button" asp-page="Menu" asp-route-menu="Food" asp-route-category="Cookies">Cookies</a></li>
                    }
                    @if (Model.categoryString == "Snacks")
                    {
                        <li><a class="menu-button active-menu-button" asp-page="Menu" asp-route-menu="Food" asp-route-category="Snacks">Snacks</a></li>
                    }
                    else
                    {
                        <li><a class="menu-button" asp-page="Menu" asp-route-menu="Food" asp-route-category="Snacks">Snacks</a></li>
                    }
                </ul>
            }
            @if (Model.menuString == "meals")
            {
                <h2>Meal Types</h2>
                <ul>
                    @if (Model.categoryString == "Popular")
                    {
                        <li><a class="menu-button active-menu-button" asp-page="Menu" asp-route-menu="Meals" asp-route-category="Popular">Popular</a></li>
                    }
